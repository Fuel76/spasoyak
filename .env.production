# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Скопируйте этот файл как .env и заполните реальными значениями для продакшена

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MYSQL_ROOT_PASSWORD=your_very_secure_root_password_here
MYSQL_DATABASE=monastyr
MYSQL_USER=monastyr_user
MYSQL_PASSWORD=your_very_secure_database_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=30d
ADMIN_REGISTRATION_KEY=your_admin_registration_secret_key

# =============================================================================
# UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# =============================================================================
# URL CONFIGURATION
# =============================================================================
# Замените на ваш реальный домен
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://your-domain.com/api

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# SSL CONFIGURATION (для HTTPS)
# =============================================================================
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
ENABLE_METRICS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
