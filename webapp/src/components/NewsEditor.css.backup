.news-editor {
  max-width: 900px;
  margin: 32px auto;
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 4px 32px 0 rgba(0,0,0,0.08);
  padding: 32px 28px 28px 28px;
  font-family: 'Segoe UI', Arial, sans-serif;
}

.news-editor h2 {
  margin-bottom: 18px;
  font-size: 2rem;
  font-weight: 700;
  color: #2d2d2d;
}

.news-editor__layouts {
  margin-bottom: 18px;
  background: #f7f7fa;
  border-radius: 10px;
  padding: 14px 18px 10px 18px;
}
.news-editor__layouts h3 {
  margin: 0 0 8px 0;
  font-size: 1.1rem;
  color: #555;
}
.news-editor__layouts-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}
.news-editor__layouts-buttons button {
  background: #e6eaff;
  color: #2d3a5a;
  border: none;
  border-radius: 6px;
  padding: 6px 14px;
  font-size: 1rem;
  cursor: pointer;
  transition: background 0.18s;
}
.news-editor__layouts-buttons button:hover {
  background: #c7d2fa;
}

.news-editor__history {
  background: #f9f9f9;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 14px 18px;
  margin-bottom: 18px;
}
.history-list {
  list-style: none;
  padding: 0;
  margin: 0;
}
.history-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 6px 0;
  border-bottom: 1px solid #ececec;
}
.history-item:last-child {
  border-bottom: none;
}
.history-time {
  color: #888;
  font-size: 0.95em;
  min-width: 120px;
}
.history-title {
  flex: 1;
  color: #2d2d2d;
}
.history-restore-btn {
  background: #e6eaff;
  color: #2d3a5a;
  border: none;
  border-radius: 6px;
  padding: 4px 12px;
  cursor: pointer;
  transition: background 0.18s;
}
.history-restore-btn:hover {
  background: #c7d2fa;
}

.news-editor__media {
  margin: 18px 0 0 0;
}
.news-editor__url-input {
  width: 320px;
  max-width: 100%;
  padding: 6px 10px;
  border: 1px solid #d0d0d0;
  border-radius: 6px;
  font-size: 1rem;
  margin-left: 8px;
}
.news-editor__add-btn, .news-editor__remove-btn {
  margin-left: 8px;
  background: #e6eaff;
  color: #2d3a5a;
  border: none;
  border-radius: 6px;
  padding: 4px 12px;
  cursor: pointer;
  transition: background 0.18s;
}
.news-editor__add-btn:hover, .news-editor__remove-btn:hover {
  background: #c7d2fa;
}
.news-editor__media-thumb {
  width: 60px;
  height: 40px;
  object-fit: cover;
  border-radius: 4px;
  margin-right: 8px;
  border: 1px solid #e0e0e0;
}
.news-editor__media-url {
  font-size: 0.97em;
  color: #555;
  margin-right: 8px;
}
.news-editor__cover-preview {
  display: block;
  margin-top: 8px;
  max-width: 220px;
  max-height: 120px;
  border-radius: 6px;
  border: 1px solid #e0e0e0;
}

.news-editor__actions {
  margin-top: 28px;
  text-align: right;
}
.news-editor__save-btn {
  background: linear-gradient(90deg, #4f8cff 0%, #6a7cff 100%);
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 10px 28px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  box-shadow: 0 2px 8px 0 rgba(79,140,255,0.08);
  transition: background 0.18s, box-shadow 0.18s;
}
.news-editor__save-btn:hover {
  background: linear-gradient(90deg, #3a6fd8 0%, #4f5cff 100%);
  box-shadow: 0 4px 16px 0 rgba(79,140,255,0.13);
}

.news-editor__textarea {
  width: 100%;
  min-height: 60px;
  margin: 18px 0 0 0;
  padding: 8px 12px;
  border: 1px solid #d0d0d0;
  border-radius: 6px;
  font-size: 1rem;
  resize: vertical;
}

.news-preview {
  background: #f7f7fa;
  border-radius: 10px;
  padding: 24px 18px;
  margin-bottom: 18px;
  border: 1px solid #e0e0e0;
}

.loading, .error-message {
  text-align: center;
  margin: 60px 0;
  font-size: 1.2rem;
  color: #888;
}

@media (max-width: 600px) {
  .news-editor {
    padding: 10px 2vw;
  }
  .news-editor__layouts, .news-editor__history, .news-preview {
    padding: 10px 4px;
  }
  .news-editor__url-input {
    width: 100%;
    margin: 8px 0 0 0;
  }
}
