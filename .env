# =============================================================================
# ENVIRONMENT VARIABLES FOR AMVERA DEPLOYMENT
# =============================================================================
# Скопируйте этот файл как .env для развертывания на Amvera

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MYSQL_ROOT_PASSWORD=AmveraSecureRootPass2025!
MYSQL_DATABASE=spasoyak
MYSQL_USER=spasoyak_user
MYSQL_PASSWORD=AmveraSecureDbPass2025!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
JWT_SECRET=AmveraSecureJwtKey2025ForSpasoyakMonasterySystem!
JWT_EXPIRES_IN=30d
ADMIN_REGISTRATION_KEY=AmveraAdminKey2025!

# =============================================================================
# UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# =============================================================================
# URL CONFIGURATION (обновите с вашим Amvera доменом)
# =============================================================================
FRONTEND_URL=https://your-amvera-domain.amvera.io
VITE_API_URL=https://your-amvera-domain.amvera.io

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info
